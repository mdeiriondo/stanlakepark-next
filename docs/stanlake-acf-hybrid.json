  "example_content": [
    {
      "post_type": "experience_info",
      "post_title": "Wine Tour & Tasting",
      "post_status": "publish",
      "post_content": "<p>Explore our historic vineyard and taste award-winning English wines. Walk through our beautiful grounds, learn about the winemaking process from our expert team, and sample our finest selections in our 17th-century barn.</p>\n\n<p>Your journey begins at the Wine Bar, where you'll meet your guide. From there, we'll walk through the vineyard, discussing the unique terroir of the Thames Valley and our sustainable viticulture practices. The tour concludes with a guided tasting of five of our premium wines.</p>",
      "post_excerpt": "Our most popular experience - vineyard tour with five wine tastings",
      "acf": {
        "ticket_tailor_event_id": "12345",
        "experience_type": "wine_tour_tasting",
        "duration_display": "1.5 hours",
        "short_description": "Explore our historic vineyard and taste award-winning English wines",
        "whats_included": "<ul>\n<li>Guided vineyard tour</li>\n<li>Historic winery visit</li>\n<li>5 wine tastings</li>\n<li>Souvenir glass to take home</li>\n</ul>",
        "badge": "most_popular",
        "faq": [
          {
            "question": "What should I wear?",
            "answer": "Comfortable walking shoes recommended as we'll tour the vineyard. Weather-appropriate clothing - tours run rain or shine!"
          },
          {
            "question": "Is the tour wheelchair accessible?",
            "answer": "The winery and tasting room are fully accessible. Vineyard paths are grass/gravel - please contact us if you need assistance."
          },
          {
            "question": "Can I buy wine?",
            "answer": "Absolutely! Our Wine Bar & Shop is open after your tour with exclusive discounts for tour guests."
          }
        ],
        "external_link": ""
      }
    },
    {
      "post_type": "experience_info",
      "post_title": "WSET Courses",
      "post_status": "publish",
      "post_content": "<p>Professional wine education courses held at Stanlake Park. Courses are run by Thames Valley Wine School, an accredited WSET program provider.</p>\n\n<p>Available levels include WSET Level 1, Level 2, and Level 3. All courses include tastings, course materials, and examination.</p>",
      "post_excerpt": "Professional wine education at our estate",
