{
  "acf_field_groups": [
    {
      "key": "group_wine_details",
      "title": "Wine Details",
      "fields": [
        {
          "key": "field_vintage",
          "label": "Vintage",
          "name": "vintage",
          "type": "number",
          "placeholder": "2023"
        },
        {
          "key": "field_grape_varieties",
          "label": "Grape Varieties",
          "name": "grape_varieties",
          "type": "text",
          "placeholder": "Chardonnay, Pinot Noir"
        },
        {
          "key": "field_tasting_notes",
          "label": "Tasting Notes",
          "name": "tasting_notes",
          "type": "wysiwyg",
          "toolbar": "basic"
        },
        {
          "key": "field_alcohol_percentage",
          "label": "Alcohol %",
          "name": "alcohol_percentage",
          "type": "number",
          "step": 0.1,
          "min": 0,
          "max": 20,
          "placeholder": "12.5"
        },
        {
          "key": "field_awards",
          "label": "Awards & Accolades",
          "name": "awards",
          "type": "repeater",
          "layout": "table",
          "button_label": "Add Award",
          "sub_fields": [
            {
              "key": "field_award_name",
              "label": "Award",
              "name": "award",
              "type": "text",
              "required": 1
            },
            {
              "key": "field_award_year",
              "label": "Year",
              "name": "year",
              "type": "number",
              "required": 1
            },
            {
              "key": "field_award_medal",
              "label": "Medal/Rating",
              "name": "medal",
              "type": "select",
              "choices": {
                "gold": "Gold",
                "silver": "Silver",
                "bronze": "Bronze",
                "90plus": "90+ Points"
              }
            }
          ]
        },
        {
          "key": "field_bottle_size",
          "label": "Bottle Size",
          "name": "bottle_size",
          "type": "select",
          "choices": {
            "375ml": "375ml (Half Bottle)",
            "750ml": "750ml (Standard)",
            "1500ml": "1500ml (Magnum)"
          },
          "default_value": "750ml"
        },
        {
          "key": "field_food_pairing",
          "label": "Food Pairing Suggestions",
          "name": "food_pairing",
          "type": "textarea",
          "rows": 3
        }
      ],
      "location": [
        [
          {
            "param": "post_type",
            "operator": "==",
            "value": "wine"
          }
        ]
      ]
    },
    {
      "key": "group_experience_editorial",
      "title": "Experience Info (Editorial Only - Booking via Ticket Tailor)",
      "fields": [
        {
          "key": "field_ticket_tailor_event_id",
          "label": "Ticket Tailor Event ID",
          "name": "ticket_tailor_event_id",
          "type": "text",
          "instructions": "El ID del evento en Ticket Tailor. Ejemplo: '12345'. Dejar vac√≠o si no tiene booking (ej. WSET courses external)",
          "placeholder": "12345"
        },
        {
          "key": "field_experience_type",
          "label": "Experience Type (Display)",
          "name": "experience_type",
          "type": "select",
          "choices": {
            "wine_tour_tasting": "Wine Tour & Tasting",
            "wine_cheese_tour": "Wine & Cheese Tour",
            "wine_cream_tea": "Wine & Cream Tea Tour",
            "wine_cheese_tasting": "Wine & Cheese Tasting",
            "work_vineyard": "Work from the Vineyard",
            "special_tastings": "Special Tastings",
            "special_events": "Special Events",
            "wset_courses": "WSET Courses"
          }
        },
        {
          "key": "field_duration_display",
          "label": "Duration (Display Text)",
          "name": "duration_display",
          "type": "text",
          "placeholder": "1.5 hours"
        },
        {
          "key": "field_short_description",
          "label": "Short Description",
          "name": "short_description",
          "type": "textarea",
          "maxlength": 200,
          "rows": 3,
          "placeholder": "Brief description for cards (max 200 chars)"
        },
        {
          "key": "field_whats_included",
          "label": "What's Included",
          "name": "whats_included",
          "type": "wysiwyg",
          "toolbar": "basic",
          "instructions": "Lista de lo que incluye la experiencia (tour, tastings, etc.)"
        },
        {
          "key": "field_badge",
          "label": "Badge (Optional)",
          "name": "badge",
          "type": "select",
          "allow_null": 1,
          "choices": {
            "most_popular": "‚≠ê Most Popular",
            "popular": "‚≠ê Popular",
            "seasonal": "üå∏ Seasonal",
            "new": "‚ú® New",
            "limited": "‚ö° Limited Spots"
          }
        },
        {
          "key": "field_gallery",
          "label": "Photo Gallery",
          "name": "gallery",
          "type": "gallery",
          "return_format": "array",
          "preview_size": "medium",
          "library": "all"
        },
        {
          "key": "field_faq",
          "label": "FAQ",
          "name": "faq",
          "type": "repeater",
          "layout": "block",
          "button_label": "Add Question",
          "sub_fields": [
            {
              "key": "field_question",
              "label": "Question",
              "name": "question",
              "type": "text",
              "required": 1
            },
            {
              "key": "field_answer",
              "label": "Answer",
              "name": "answer",
              "type": "textarea",
              "required": 1,
              "rows": 3
            }
          ]
        },
        {
          "key": "field_external_link",
          "label": "External Booking Link (for WSET, etc.)",
          "name": "external_link",
          "type": "url",
          "instructions": "Solo para experiencias sin Ticket Tailor (ej. WSET courses). Si est√° completo, se muestra bot√≥n 'External Site' en lugar de widget.",
          "placeholder": "https://wine-school.com/courses"
        }
      ],
      "location": [
        [
          {
            "param": "post_type",
            "operator": "==",
            "value": "experience_info"
          }
        ]
      ]
    },
    {
      "key": "group_venue_details",
      "title": "Venue Details",
      "fields": [
        {
          "key": "field_capacity",
          "label": "Max Capacity",
          "name": "capacity",
          "type": "number",
          "placeholder": "150"
        },
        {
          "key": "field_venue_features",
          "label": "Features",
          "name": "features",
          "type": "checkbox",
          "choices": {
            "indoor": "Indoor Space",
            "outdoor": "Outdoor Space",
            "licensed": "Licensed Bar",
            "catering": "In-house Catering",
            "parking": "Parking Available",
            "accessible": "Wheelchair Accessible",
            "accommodation": "On-site Accommodation"
          }
        },
        {
          "key": "field_dimensions",
          "label": "Dimensions",
          "name": "dimensions",
          "type": "text",
          "placeholder": "20m x 15m"
        },
        {
          "key": "field_gallery",
          "label": "Photo Gallery",
          "name": "gallery",
          "type": "gallery",
          "return_format": "array"
        },
        {
          "key": "field_floor_plan",
          "label": "Floor Plan",
          "name": "floor_plan",
          "type": "image",
          "return_format": "array"
        }
      ],
      "location": [
        [
          {
            "param": "post_type",
            "operator": "==",
            "value": "venue"
          }
        ]
      ]
    },
    {
      "key": "group_accommodation_details",
      "title": "Accommodation Details",
      "fields": [
        {
          "key": "field_sleeps",
          "label": "Sleeps",
          "name": "sleeps",
          "type": "number",
          "placeholder": "4"
        },
        {
          "key": "field_bedrooms",
          "label": "Bedrooms",
          "name": "bedrooms",
          "type": "number",
          "placeholder": "2"
        },
        {
          "key": "field_bathrooms",
          "label": "Bathrooms",
          "name": "bathrooms",
          "type": "number",
          "placeholder": "2"
        },
        {
          "key": "field_amenities",
          "label": "Amenities",
          "name": "amenities",
          "type": "checkbox",
          "choices": {
            "wifi": "WiFi",
            "kitchen": "Full Kitchen",
            "parking": "Private Parking",
            "garden": "Private Garden",
            "fireplace": "Fireplace",
            "bbq": "BBQ",
            "hot_tub": "Hot Tub"
          }
        },
        {
          "key": "field_gallery",
          "label": "Photo Gallery",
          "name": "gallery",
          "type": "gallery",
          "return_format": "array"
        },
        {
          "key": "field_booking_link",
          "label": "Booking Link (External)",
          "name": "booking_link",
          "type": "url",
          "instructions": "Link to Airbnb, Booking.com, or direct booking system",
          "placeholder": "https://..."
        }
      ],
      "location": [
        [
          {
            "param": "post_type",
            "operator": "==",
            "value": "accommodation"
          }
        ]
      ]
    }
  ],
