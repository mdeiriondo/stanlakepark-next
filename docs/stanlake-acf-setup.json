{
  "acf_field_groups": [
    {
      "key": "group_experience_details",
      "title": "Experience Details",
      "fields": [
        {
          "key": "field_experience_type",
          "label": "Experience Type",
          "name": "experience_type",
          "type": "select",
          "required": 1,
          "choices": {
            "wine_tour_tasting": "Wine Tour & Tasting ‚≠ê",
            "wine_cheese_tour": "Wine & Cheese Tour ‚≠ê",
            "wine_cream_tea": "Wine & Cream Tea Tour",
            "wine_cheese_tasting": "Wine & Cheese Tasting",
            "work_vineyard": "Work from the Vineyard",
            "special_tastings": "Special Tastings",
            "special_events": "Special Events",
            "wset_courses": "WSET Courses"
          },
          "default_value": "wine_tour_tasting"
        },
        {
          "key": "field_duration",
          "label": "Duration",
          "name": "duration",
          "type": "text",
          "required": 1,
          "default_value": "1.5 hours",
          "placeholder": "e.g., 1.5 hours"
        },
        {
          "key": "field_capacity",
          "label": "Max Capacity",
          "name": "capacity",
          "type": "number",
          "required": 1,
          "default_value": 20,
          "min": 1,
          "max": 100
        },
        {
          "key": "field_enable_waitlist",
          "label": "Enable Waitlist",
          "name": "enable_waitlist",
          "type": "true_false",
          "default_value": 1,
          "ui": 1,
          "message": "Allow users to join waitlist when sold out"
        },
        {
          "key": "field_short_description",
          "label": "Short Description",
          "name": "short_description",
          "type": "textarea",
          "rows": 3,
          "maxlength": 200,
          "placeholder": "Brief description for cards (max 200 chars)"
        },
        {
          "key": "field_whats_included",
          "label": "What's Included",
          "name": "whats_included",
          "type": "repeater",
          "layout": "table",
          "button_label": "Add Item",
          "sub_fields": [
            {
              "key": "field_included_item",
              "label": "Item",
              "name": "item",
              "type": "text",
              "required": 1,
              "placeholder": "e.g., Guided vineyard tour"
            }
          ]
        },
        {
          "key": "field_hero_image",
          "label": "Hero Image",
          "name": "hero_image",
          "type": "image",
          "return_format": "array",
          "preview_size": "medium"
        },
        {
          "key": "field_badge",
          "label": "Badge",
          "name": "badge",
          "type": "select",
          "allow_null": 1,
          "choices": {
            "most_popular": "‚≠ê Most Popular",
            "popular": "‚≠ê Popular",
            "seasonal": "üå∏ Seasonal",
            "new": "‚ú® New"
          }
        }
      ],
      "location": [
        [
          {
            "param": "post_type",
            "operator": "==",
            "value": "experience"
          }
        ]
      ]
    },
    {
      "key": "group_scheduling",
      "title": "Scheduling & Availability",
      "fields": [
        {
          "key": "field_schedule_type",
          "label": "Schedule Type",
          "name": "schedule_type",
          "type": "select",
          "required": 1,
          "choices": {
            "recurring": "Recurring (fixed days/times)",
            "seasonal": "Seasonal (date ranges)",
            "adhoc": "Ad-hoc (manual dates)",
            "external": "External (link only)"
          },
          "default_value": "recurring"
        },
        {
          "key": "field_recurring_schedule",
          "label": "Recurring Schedule",
          "name": "recurring_schedule",
          "type": "repeater",
          "conditional_logic": [
            [
              {
                "field": "field_schedule_type",
                "operator": "==",
                "value": "recurring"
              }
            ]
          ],
          "layout": "table",
          "button_label": "Add Time Slot",
          "sub_fields": [
            {
              "key": "field_day_of_week",
              "label": "Day",
              "name": "day",
              "type": "select",
              "required": 1,
              "choices": {
                "0": "Sunday",
                "1": "Monday",
                "2": "Tuesday",
                "3": "Wednesday",
                "4": "Thursday",
                "5": "Friday",
                "6": "Saturday"
              }
            },
            {
              "key": "field_time",
              "label": "Time",
              "name": "time",
              "type": "time_picker",
              "required": 1,
              "display_format": "g:i a",
              "return_format": "H:i:s"
            }
          ]
        },
        {
          "key": "field_seasonal_dates",
          "label": "Seasonal Availability",
          "name": "seasonal_dates",
          "type": "group",
          "conditional_logic": [
            [
              {
                "field": "field_schedule_type",
                "operator": "==",
                "value": "seasonal"
              }
            ]
          ],
          "sub_fields": [
            {
              "key": "field_start_month",
              "label": "Start Month",
              "name": "start_month",
              "type": "select",
              "choices": {
                "1": "January",
                "2": "February",
                "3": "March",
                "4": "April",
                "5": "May",
                "6": "June",
                "7": "July",
                "8": "August",
                "9": "September",
                "10": "October",
                "11": "November",
                "12": "December"
              }
            },
            {
              "key": "field_end_month",
              "label": "End Month",
              "name": "end_month",
              "type": "select",
              "choices": {
                "1": "January",
                "2": "February",
                "3": "March",
                "4": "April",
                "5": "May",
                "6": "June",
                "7": "July",
                "8": "August",
                "9": "September",
                "10": "October",
                "11": "November",
                "12": "December"
              }
            },
            {
              "key": "field_seasonal_days",
              "label": "Days of Week",
              "name": "days",
              "type": "checkbox",
              "choices": {
                "0": "Sunday",
                "1": "Monday",
                "2": "Tuesday",
                "3": "Wednesday",
                "4": "Thursday",
                "5": "Friday",
                "6": "Saturday"
              }
            }
          ]
        },
        {
          "key": "field_external_link",
          "label": "External Booking Link",
          "name": "external_link",
          "type": "url",
          "conditional_logic": [
            [
              {
                "field": "field_schedule_type",
                "operator": "==",
                "value": "external"
              }
            ]
          ],
          "placeholder": "https://..."
        }
      ],
      "location": [
        [
          {
            "param": "post_type",
            "operator": "==",
            "value": "experience"
          }
        ]
      ]
    },
    {
      "key": "group_pricing",
      "title": "Pricing & Add-ons",
      "fields": [
        {
          "key": "field_pricing_type",
          "label": "Pricing Type",
          "name": "pricing_type",
          "type": "select",
          "required": 1,
          "choices": {
            "fixed": "Fixed Price",
            "dynamic": "Dynamic (by day/season)",
            "variable": "Variable (per event)"
          },
          "default_value": "fixed"
        },
        {
          "key": "field_base_price",
          "label": "Base Price (¬£)",
          "name": "base_price",
          "type": "number",
          "required": 1,
          "conditional_logic": [
            [
              {
                "field": "field_pricing_type",
                "operator": "==",
                "value": "fixed"
              }
            ]
          ],
          "min": 0,
          "step": 1,
          "placeholder": "25"
        },
        {
          "key": "field_dynamic_pricing",
          "label": "Dynamic Pricing Rules",
          "name": "dynamic_pricing",
          "type": "repeater",
          "conditional_logic": [
            [
              {
                "field": "field_pricing_type",
                "operator": "==",
                "value": "dynamic"
              }
            ]
          ],
          "layout": "block",
          "button_label": "Add Pricing Rule",
          "sub_fields": [
            {
              "key": "field_rule_name",
              "label": "Rule Name",
              "name": "name",
              "type": "text",
              "placeholder": "e.g., Weekend Premium"
            },
            {
              "key": "field_rule_days",
              "label": "Days",
              "name": "days",
              "type": "checkbox",
              "choices": {
                "0": "Sunday",
                "1": "Monday",
                "2": "Tuesday",
                "3": "Wednesday",
                "4": "Thursday",
                "5": "Friday",
                "6": "Saturday"
              }
            },
            {
              "key": "field_rule_months",
              "label": "Months",
              "name": "months",
              "type": "checkbox",
              "choices": {
                "1": "Jan",
                "2": "Feb",
                "3": "Mar",
                "4": "Apr",
                "5": "May",
                "6": "Jun",
                "7": "Jul",
                "8": "Aug",
                "9": "Sep",
                "10": "Oct",
                "11": "Nov",
                "12": "Dec"
              }
            },
            {
              "key": "field_rule_price",
              "label": "Price (¬£)",
              "name": "price",
              "type": "number",
              "required": 1,
              "min": 0
            }
          ]
        },
        {
          "key": "field_addons",
          "label": "Add-ons Available",
          "name": "addons",
          "type": "repeater",
          "layout": "block",
          "button_label": "Add Add-on",
          "sub_fields": [
            {
              "key": "field_addon_name",
              "label": "Name",
              "name": "name",
              "type": "text",
              "required": 1,
              "placeholder": "e.g., Cheese Board"
            },
            {
              "key": "field_addon_description",
              "label": "Description",
              "name": "description",
              "type": "textarea",
              "rows": 2,
              "placeholder": "British artisan cheeses"
            },
            {
              "key": "field_addon_price",
              "label": "Price (¬£)",
              "name": "price",
              "type": "number",
              "required": 1,
              "min": 0,
              "placeholder": "12"
            },
            {
              "key": "field_addon_image",
              "label": "Image",
              "name": "image",
              "type": "image",
              "return_format": "array",
              "preview_size": "thumbnail"
            }
          ]
        }
      ],
      "location": [
        [
          {
            "param": "post_type",
            "operator": "==",
            "value": "experience"
          }
        ]
      ]
    },
    {
      "key": "group_vouchers",
      "title": "Vouchers & Discounts",
      "fields": [
        {
          "key": "field_accept_vouchers",
          "label": "Accept Vouchers",
          "name": "accept_vouchers",
          "type": "true_false",
          "default_value": 1,
          "ui": 1
        },
        {
          "key": "field_third_party_vouchers",
          "label": "Accepted Third-Party Vouchers",
          "name": "third_party_vouchers",
          "type": "checkbox",
          "conditional_logic": [
            [
              {
                "field": "field_accept_vouchers",
                "operator": "==",
                "value": "1"
              }
            ]
          ],
          "choices": {
            "virgin": "Virgin Experience Days",
            "redletter": "Red Letter Days",
            "buyagift": "Buy A Gift",
            "other": "Other (manual verification)"
          }
        },
        {
          "key": "field_voucher_redemption_notes",
          "label": "Voucher Redemption Notes",
          "name": "voucher_notes",
          "type": "textarea",
          "conditional_logic": [
            [
              {
                "field": "field_accept_vouchers",
                "operator": "==",
                "value": "1"
              }
            ]
          ],
          "rows": 3,
          "placeholder": "Special instructions for third-party vouchers..."
        }
      ],
      "location": [
        [
          {
            "param": "post_type",
            "operator": "==",
            "value": "experience"
          }
        ]
      ]
    },
    {
      "key": "group_waitlist_settings",
      "title": "Waitlist Settings",
      "fields": [
        {
          "key": "field_waitlist_email_subject",
          "label": "Waitlist Notification Subject",
          "name": "waitlist_subject",
          "type": "text",
          "conditional_logic": [
            [
              {
                "field": "field_enable_waitlist",
                "operator": "==",
                "value": "1"
              }
            ]
          ],
          "default_value": "üéâ Great news - a spot just opened!",
          "placeholder": "Email subject line"
        },
        {
          "key": "field_waitlist_priority_window",
          "label": "Priority Booking Window (hours)",
          "name": "priority_window",
          "type": "number",
          "conditional_logic": [
            [
              {
                "field": "field_enable_waitlist",
                "operator": "==",
                "value": "1"
              }
            ]
          ],
          "default_value": 24,
          "min": 1,
          "max": 72,
          "placeholder": "24"
        }
      ],
      "location": [
        [
          {
            "param": "post_type",
            "operator": "==",
            "value": "experience"
          }
        ]
      ]
    }
  ],
  "custom_post_type": {
    "key": "experience",
    "label": "Experiences",
    "labels": {
      "singular": "Experience",
      "plural": "Experiences"
    },
    "public": true,
    "has_archive": true,
    "rewrite": {
      "slug": "experiences",
      "with_front": false
    },
    "supports": [
      "title",
      "editor",
      "thumbnail",
      "excerpt"
    ],
    "menu_icon": "dashicons-tickets-alt",
    "show_in_rest": true,
    "rest_base": "experiences"
  },
