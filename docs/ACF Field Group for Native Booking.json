{
    "key": "group_experience_editorial",
    "title": "Experience Info (Editorial & Booking)",
    "fields": [
      {
        "key": "field_booking_system_mode",
        "label": "Booking System Mode",
        "name": "booking_mode",
        "type": "select",
        "instructions": "Choose how this experience is booked.",
        "required": 1,
        "choices": {
          "ticket_tailor": "Ticket Tailor (External)",
          "native": "Native Booking (Firebase)",
          "external": "External Link (WSET/Other)"
        },
        "default_value": "ticket_tailor"
      },
  
      {
        "key": "field_ticket_tailor_event_id",
        "label": "Ticket Tailor Event ID",
        "name": "ticket_tailor_event_id",
        "type": "text",
        "conditional_logic": [
          [
            {
              "field": "field_booking_system_mode",
              "operator": "==",
              "value": "ticket_tailor"
            }
          ]
        ],
        "placeholder": "12345"
      },
  
      {
        "key": "field_external_booking_url",
        "label": "External Booking URL",
        "name": "external_booking_url",
        "type": "url",
        "conditional_logic": [
          [
            {
              "field": "field_booking_system_mode",
              "operator": "==",
              "value": "external"
            }
          ]
        ]
      },
  
      {
        "key": "field_native_capacity_default",
        "label": "Default Capacity (Native)",
        "name": "native_capacity",
        "type": "number",
        "instructions": "General capacity if not specified in slots.",
        "default_value": 20,
        "min": 1,
        "conditional_logic": [
          [
            {
              "field": "field_booking_system_mode",
              "operator": "==",
              "value": "native"
            }
          ]
        ]
      },
  
      {
        "key": "field_native_schedule_days",
        "label": "Available Days (Native)",
        "name": "native_schedule",
        "type": "checkbox",
        "choices": {
          "1": "Monday",
          "2": "Tuesday",
          "3": "Wednesday",
          "4": "Thursday",
          "5": "Friday",
          "6": "Saturday",
          "0": "Sunday"
        },
        "layout": "horizontal",
        "conditional_logic": [
          [
            {
              "field": "field_booking_system_mode",
              "operator": "==",
              "value": "native"
            }
          ]
        ]
      },
  
      {
        "key": "field_native_time_slots",
        "label": "Time Slots (Native)",
        "name": "native_time_slots",
        "type": "repeater",
        "instructions": "Define specific slots and their capacities.",
        "layout": "table",
        "button_label": "Add Slot",
        "conditional_logic": [
          [
            {
              "field": "field_booking_system_mode",
              "operator": "==",
              "value": "native"
            }
          ]
        ],
        "sub_fields": [
          {
            "key": "field_slot_label",
            "label": "Time Label",
            "name": "label",
            "type": "text",
            "placeholder": "e.g. 14:00 - 15:30"
          },
          {
            "key": "field_slot_capacity",
            "label": "Slot Capacity",
            "name": "slot_capacity",
            "type": "number",
            "instructions": "Overrides default capacity for this slot."
          }
        ]
      },
  
      {
        "key": "field_experience_type",
        "label": "Experience Type (Display)",
        "name": "experience_type",
        "type": "select",
        "choices": {
          "wine_tour_tasting": "Wine Tour & Tasting",
          "wine_cheese_tour": "Wine & Cheese Tour",
          "wine_cream_tea": "Wine & Cream Tea Tour",
          "wine_cheese_tasting": "Wine & Cheese Tasting",
          "work_vineyard": "Work from the Vineyard",
          "special_tastings": "Special Tastings",
          "special_events": "Special Events",
          "wset_courses": "WSET Courses"
        }
      },
  
      {
        "key": "field_price",
        "label": "Price",
        "name": "price",
        "type": "number",
        "prepend": "Â£"
      },
  
      {
        "key": "field_duration_display",
        "label": "Duration (Display Text)",
        "name": "duration_display",
        "type": "text",
        "placeholder": "1.5 hours"
      },
  
      {
        "key": "field_short_description",
        "label": "Short Description",
        "name": "short_description",
        "type": "textarea",
        "maxlength": 200
      }
    ],
    "location": [
      [
        {
          "param": "post_type",
          "operator": "==",
          "value": "experience_info"
        }
      ]
    ],
    "active": true,
    "show_in_rest": 1
  }